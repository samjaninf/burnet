extends ../layout.pug

block content
  .row.mt-30.hide-on-mobile
    .col-1-2
      img(src=user.image)
    .col-1-2
      .row
        .col
          h1= user.name
      .row
        .col
          h5.mt-0 #{__('member since')} #{user.memberSince}
      .row
        .col
          p= user.description
  .show-on-mobile
    .row.mt-30.flex-center
      img(src=user.image style='max-height: 300px;')
    .row
      .col
        h1= user.name
    .row
      .col
        h5.mt-0 #{__('member since')} #{user.memberSince}
    .row
      .col
        p= user.description
