extends ../layout.pug

block content
  // Desktop
  .hide-on-mobile
    .row.mt-30
      .col-1-2
        img(src=user.image)
      .col-1-2
        .row
          .col
            h1= user.name
        .row
          .col
            h5.mt-0 #{__('member since')} #{user.memberSince}
        .row
          .col
            p= user.description
        .row.mt-15
          .col
            span
              i.fa.fa-gift
              span.ml-1 #{user.productTotal} #{__('products')}
        .row
          .col
            span
              i.fa.fa-comment
              span.ml-1 #{user.commentTotal} #{__('comments')}
    .row.mt-30
      .col
        product-grid(class='', :per-row='3', :user-id=user.id)
  // Mobile
  .show-on-mobile
    .row.mt-30.flex-center
      img(src=user.image style='max-height: 300px;')
    .row
      .col
        h1= user.name
    .row
      .col
        h5.mt-0 #{__('member since')} #{user.memberSince}
    .row
      .col
        p= user.description
    .row.mt-15
        .col.col-1-2.text-center
          span
            i.fa.fa-gift
            span.ml-1 #{user.productTotal} #{__('products')}
        .col.col-1-2.text-center
          span
            i.fa.fa-comment
            span.ml-1 #{user.commentTotal} #{__('comments')}
    .row
      product-grid(class='', :per-row='2', :user-id=user.id)
